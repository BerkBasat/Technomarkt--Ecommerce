@model AppUserCard
@{
    ViewBag.Title = "SaveCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <div class="row">
        <div class="col-lg-4 mx-auto mt-5">
            <header>
                Save Card
            </header>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Cardholder Name</label>
                    @Html.TextBoxFor(x => x.CardHolderName, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Card Number</label>
                    @Html.TextBoxFor(x => x.CardNumber, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Card Type</label>
                    @Html.TextBoxFor(x => x.CardType, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Expiration Date</label>
                    @Html.TextBoxFor(x => x.ExpirationDate, new { @class = "form-control mt-3" })
                    <small>(MM/YY)</small>
                </div>
                <div class="form-group">
                    <label>CVC</label>
                    @Html.TextBoxFor(x => x.CVC, new { @class = "form-control mt-3" })
                </div>
                <button type="submit" class="btn btn-primary d-grid gap-2 col-3 mx-auto mt-3">Save</button>
            </form>
        </div>
    </div>
</section>

