@model List<OrderDetail>
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? totalPrice = 0;
}

<section id="order-details"">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        totalPrice += item.SubTotal;
                        <tr>


                            <td width="50px">
                                <img src="~/Content/img/@item.ProductImage" style="width:auto; height:70px" />
                            </td>
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.UnitPrice
                            </td>
                            <td>
                                @item.SubTotal
                            </td>

                        </tr>
                    }
                    <tr>
                    </tr>
                </tbody>
            </table>
            <h5>Total: $@totalPrice</h5>
        </div>
    </div>
</section>

