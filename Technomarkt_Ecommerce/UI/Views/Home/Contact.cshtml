@model UI.Models.ContactVM
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="contact-form" class="mb-4">


    <h2 class="h1-responsive font-weight-bold text-center my-4">Contact us!</h2>

    <p class="text-center w-responsive mx-auto mb-5">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>

    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form name="contact-form" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="name" class="">Name</label>
                            @Html.ValidationMessageFor(x => x.Name)
                            <br />
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="email" class="">Email</label>
                            @Html.ValidationMessageFor(x => x.Email)
                            <br />
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-12">

                        <div class="md-form">
                            <label for="message">Subject</label>
                            @Html.ValidationMessageFor(x => x.Subject)
                            <br />
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">

                        <div class="md-form">
                            <label for="message">Message</label>
                            @Html.ValidationMessageFor(x => x.Message)
                            <br />
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control" })
                        </div>

                    </div>
                </div>

            </form>

            <div class="text-center text-md-left">
                <a class="btn btn-dark mt-5">Send</a>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Istanbul, Turkey</p>
                </li>

                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+90 530 252 11 55</p>
                </li>

                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>technomarkt@gmail.com</p>
                </li>
            </ul>
        </div>

    </div>

</section>
