
@{
    ViewBag.Title = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
    UI.Models.Wishlist wishlist = Session["wishlist"] as UI.Models.Wishlist;
}

<section id="wishlist-page">

    @if (wishlist.myWishlist.Count == 0)
    {
        <div class="text-center" style="margin: 18em;">
            <h1 style="font-weight:bold; font-family:Roboto,sans-serif;">Your wishlist is empty!</h1>
        </div>
    }
    else
    {
        <div class="container mt-5" style="margin-top: 7em; margin-bottom: 7em; font-weight: bold; font-family: Roboto,sans-serif;">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <h2 class="text-center mb-5" style="font-weight: bold; font-family: Roboto,sans-serif;">Wishlist</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Sub Category</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in wishlist.myWishlist.ToList())
                            {
                                <tr>
                                    <td width="50px">
                                        <img src="~/Content/img/@item.ProductImage" style="width:auto; height:17vh;" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.SubCategory</td>
                                    <td>@Html.ActionLink("Remove", "DeleteWishlistItem", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</section>


