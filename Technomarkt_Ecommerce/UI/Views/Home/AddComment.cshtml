@model UserComment
@{
    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <div class="col-md-8 mx-auto mt-5">
        <div class="col-lg-12">
            <header>
                <h4 class="text-center">Add Comment</h4>
            </header>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Write Your Comment</label>
                    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control mt-3" })
                </div>
                <button type="submit" class="btn btn-dark d-grid gap-2 col-2 mx-auto mt-3">Submit</button>
            </form>
        </div>
    </div>
</section>

