@model List<Supplier>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h2>Suppliers</h2>
</div>

<div class="row mt-5">
    <div class="col-lg-12">
        @{if (TempData["info"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["info"]
                </div>
            }
            else if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["error"]
                </div>
            }

        }

        @Html.ActionLink("Add Supplier", "Create", null, new { @class = "btn btn-dark" })
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                <tr>
                    <td>@supplier.CompanyName</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.Address</td>
                    <td>@supplier.PhoneNumber</td>
                    <td><a href="/Admin/Supplier/Update/@supplier.ID" class="btn btn-primary btn-sm">Update</a></td>
                    <td><a href="/Admin/Supplier/Delete/@supplier.ID" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>

