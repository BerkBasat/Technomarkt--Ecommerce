@model Product
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <div class="row">
        <div class="col-lg-4 mx-auto mt-5">
            <header class="text-center mb-2">
                Add Product
            </header>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Product Name</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Description</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Supply Cost</label>
                    @Html.TextBoxFor(x => x.SupplyCost, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Unit Price</label>
                    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group">
                    <label>Units in Stock</label>
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control mt-3" })
                </div>
                <div class="form-group mt-3">
                    <label>Brand</label>
                    <select class="form-control input-lg" name="BrandId">
                        @foreach (Brand brand in ViewBag.Brands)
                        {
                            <option value="@brand.ID">@brand.BrandName</option>
                        }
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label>Sub Category</label>
                    <select class="form-control input-lg" name="SubCategoryId">
                        @foreach (SubCategory subCategory in ViewBag.SubCategories)
                        {
                            <option value="@subCategory.ID">@subCategory.SubCategoryName</option>
                        }
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label>Supplier</label>
                    <select class="form-control input-lg" name="SupplierId">
                        @foreach (Supplier supplier in ViewBag.Suppliers)
                        {
                            <option value="@supplier.ID">@supplier.CompanyName</option>
                        }
                    </select>
                </div>
                <div class="form-group mt-3">
                    <label>Image</label>
                    <input type="file" name="fileImage" />
                </div>

                <button type="submit" class="btn btn-dark d-grid gap-2 col-4 mx-auto mt-4 mb-5">Submit</button>
            </form>
        </div>
    </div>
</section>

