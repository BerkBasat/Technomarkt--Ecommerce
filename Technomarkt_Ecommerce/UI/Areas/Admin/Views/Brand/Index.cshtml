@model List<Brand>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h2>BRANDS</h2>
</div>

<div class="row mt-5">
    <div class="col-lg-12">
        @{if (TempData["info"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["info"]
                </div>
            }
            else if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["error"]
                </div>
            }

        }

        @Html.ActionLink("Add Brand", "Create", null, new { @class = "btn btn-dark" })
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Brand Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model)
                {
                <tr>
                    <td>@brand.ID</td>
                    <td>@brand.BrandName</td>
                    <td><a href="/Admin/Brand/Update/@brand.ID" class="btn btn-primary btn-sm">Update</a></td>
                    <td><a href="/Admin/Brand/Delete/@brand.ID" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>

