@model List<SupplierOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Depot/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h2>SUPPLIER ORDERS</h2>
</div>

<div class="row mt-5">
    <div class="col-lg-12">

        <div class="text-center mb-4" style="margin-top:50px;">
            <form method="get">
                <label>Search: </label>
                <input type="search" placeholder="Enter Order No or Date" value="@ViewData["SearchResults"]" name="search" />
                <input type="submit" value="Search" class="btn btn-sm btn-primary mb-1" />
                @Html.ActionLink("See All", "Index", null, new { @class = "btn btn-sm btn-primary mb-1" })

            </form>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order No</th>
                    <th>Order Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var supplierOrder in Model)
                {
                    <tr>
                        <td>@supplierOrder.ID</td>
                        <td>@supplierOrder.OrderNo</td>
                        <td>@supplierOrder.OrderDate</td>
                        <td> @Html.ActionLink("Details", "OrderDetails", new { id = supplierOrder.ID }, new { @class = "btn btn-sm btn-dark " })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

